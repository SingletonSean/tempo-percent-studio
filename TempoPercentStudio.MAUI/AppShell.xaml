<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TempoPercentStudio.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:TempoPercentStudio.MAUI.Pages"
    Title="Tempo Percent Studio"
    Shell.FlyoutBehavior="Disabled">

    <Tab Title="Calculate">
        <ShellContent
            Title="Calculate Tempo"
            ContentTemplate="{DataTemplate pages:CalculateTempoView}"
            Route="CalculateTempo" />
    </Tab>

    <Tab Title="Personal Bests">
        <ShellContent
            Title="Personal Bests"
            ContentTemplate="{DataTemplate pages:PersonalBestListingView}"
            Route="PersonalBestListing" />
    </Tab>

</Shell>
